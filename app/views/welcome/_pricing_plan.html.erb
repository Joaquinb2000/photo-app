<div class="card card_pricing">
    <div class="card-body ">
        <div class="row">
        <h2 class="card-title"><%= title %></h2>

        </div>
        <ul class="mt-3">
            <% features.each do |feature|%>
                <li class="mb-2">
                    <p><%= feature %></p>
                </li>
            <%end%>
        </ul>
    </div>
        <div class="card-footer bg-dark text-light flex-column d-flex justify-content-center">
            <h3 class="text-center"><strong>$ <%= price %></strong></h3>
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-lg btn-primary"%>
        </div>
</div>
