<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome to Photo App</h1>
        <p class="col-md-8 fs-4">Sign up, find out and use all of our functionalities!</p>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg"%>
    </div>
</div>

<% features = ["Unlimited Image Upload", "Unlimited image uploads", "Responsive design"]%>

<div class="row justify-content-around mb-5">
    <div class="col-5">
        <%= render partial: "pricing_plan", locals:
                                            {
                                                title: "Premium Plan",
                                                features: features,
                                                price: 10
                                            }
        %>
    </div>
    <div class="col-5">
        <%= render partial: "pricing_plan", locals:
                                            {
                                                title: "Amaze Plan",
                                                features: features.push("Unlimited Projects"),
                                                price: 20
                                            }
        %>
    </div>
</div>
